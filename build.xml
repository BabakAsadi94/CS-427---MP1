<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="build" name="basadi2">

    <property environment="env"/>
    <property name="junit.output.dir" value="ant-target/reports"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.8"/>
    <property name="source" value="1.8"/>
    
    <path id="basadi2.classpath">
        <fileset dir="ant-libs" includes="*.jar"/>
        <pathelement location="ant-target/test-classes"/>
        <pathelement location="ant-target/classes"/>
    </path>

    <!-- Clean up task -->
    <target name="clean">
        <delete dir="ant-target/test-classes"/>
        <delete dir="ant-target/classes"/>
        <delete dir="ant-target/reports/html"/>
        <delete dir="ant-target/docs"/>
        <echo message="Clean up complete."/>
    </target>

    <!-- Compile source Java files -->
    <target name="build">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <mkdir dir="ant-target/classes"/>
        <javac debug="true" debuglevel="${debuglevel}" destdir="ant-target/classes" includeantruntime="false" source="${source}" target="${target}" encoding="UTF-8">
            <src path="src/main/java"/>
            <include name="**/*.java"/>
            <classpath refid="basadi2.classpath"/>
        </javac>
    </target>

    <!-- Compile test Java files and copy test resources -->
    <target name="build-test" depends="build">
        <mkdir dir="ant-target/test-classes"/>
        <javac debug="true" debuglevel="${debuglevel}" destdir="ant-target/test-classes" includeantruntime="false" source="${source}" target="${target}" encoding="UTF-8">
            <src path="src/test/java"/>
            <include name="**/*.java"/>
            <classpath refid="basadi2.classpath"/>
        </javac>
        <copy todir="ant-target/test-classes">
            <fileset dir="src/test/resources"/>
        </copy>
    </target>

    <!-- JUnit test execution target -->
    <target name="test" depends="build-test">
        <mkdir dir="${junit.output.dir}"/>
        <mkdir dir="${junit.output.dir}/html"/>
        <junit fork="yes" printsummary="withOutAndErr">
            <formatter type="xml"/>
            <batchtest todir="${junit.output.dir}">
                <fileset dir="src/test/java">
                    <include name="**/*Test.java"/>
                </fileset>
            </batchtest>
            <classpath refid="basadi2.classpath"/>
        </junit>
        <junitreport>
            <fileset dir="${junit.output.dir}">
                <include name="TEST-*.xml"/>
            </fileset>
            <report format="frames" todir="${junit.output.dir}/html"/>
        </junitreport>
        <echo message="JUnit report generated at: ${junit.output.dir}/html/index.html"/>
    </target>

    <!-- Generate Javadoc documentation -->
    <target name="javadoc" depends="build">
        <mkdir dir="ant-target/reports/html"/>
        <javadoc destdir="ant-target/reports/html" sourcepath="src/main/java" classpathref="basadi2.classpath" encoding="UTF-8">
            <fileset dir="src/main/java">
                <include name="**/*.java"/>
            </fileset>
            <doctitle><![CDATA[Javadoc for Project basadi2]]></doctitle>
            <bottom><![CDATA[Generated by Ant]]></bottom>
        </javadoc>
        <echo message="Javadoc generated at: ant-target/reports/html/overview-summary.html"/>
    </target>

    <!-- Default target for testing and documentation generation -->
    <target name="default" depends="test, javadoc">
        <echo message="Build, test, and Javadoc generation complete."/>
    </target>

</project>
