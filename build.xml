<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="compile-sources" name="basadi2">
    
    <property environment="env"/>
    <property name="report.dir" value="output/reports"/>
    <property name="debug.opts" value="source,lines,vars"/>
    <property name="java.version" value="1.8"/>
    
    <path id="basadi2.classpath">
        <fileset dir="libraries" includes="*.jar"/>
        <pathelement location="output/classes"/>
        <pathelement location="output/test-classes"/>
    </path>

    <target name="cleanup">
        <delete dir="output/classes"/>
        <delete dir="output/test-classes"/>
        <echo message="Clean up complete."/>
    </target>

    <target name="compile-sources">
        <mkdir dir="output/classes"/>
        <javac debug="true" debuglevel="${debug.opts}" destdir="output/classes" source="${java.version}" target="${java.version}" encoding="UTF-8" includeantruntime="false">
            <src path="src/main/java"/>
            <include name="**/*.java"/>
            <classpath refid="basadi2.classpath"/>
        </javac>
    </target>

    <target name="compile-test-code" depends="compile-sources">
        <mkdir dir="output/test-classes"/>
        <javac debug="true" debuglevel="${debug.opts}" destdir="output/test-classes" source="${java.version}" target="${java.version}" encoding="UTF-8" includeantruntime="false">
            <src path="src/test/java"/>
            <include name="**/*.java"/>
            <classpath refid="basadi2.classpath"/>
        </javac>
        <copy todir="output/test-classes">
            <fileset dir="src/test/resources"/>
        </copy>
    </target>

    <target name="run-tests" depends="compile-test-code">
        <mkdir dir="${report.dir}"/>
        <mkdir dir="${report.dir}/html"/>
        <junit fork="yes" printsummary="yes">
            <batchtest todir="${report.dir}">
                <fileset dir="src/test/java">
                    <include name="**/*Test.java"/>
                </fileset>
            </batchtest>
            <classpath refid="basadi2.classpath"/>
        </junit>
        <!-- Generate HTML Reports -->
        <junitreport>
            <fileset dir="${report.dir}">
                <include name="TEST-*.xml"/>
            </fileset>
            <report format="frames" todir="${report.dir}/html"/>
        </junitreport>
        <echo message="JUnit report generated at: ${report.dir}/html/index.html"/>
    </target>
    
    <target name="default-test" depends="run-tests">
        <echo message="All tests completed successfully!"/>
    </target>
</project>
