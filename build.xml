<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="test" name="jsoup">
    <!-- Property Definitions -->
    <property name="junit.output.dir" value="ant-target/reports"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.8"/>
    <property name="source" value="1.8"/>

    <!-- Classpath Definition -->
    <path id="basadi2.classpath">
        <pathelement location="ant-target/test-classes"/>
        <pathelement location="ant-target/classes"/>
        <!-- Include all JARs in ant-libs -->
        <fileset dir="ant-libs">
            <include name="**/*.jar"/>
        </fileset>
    </path>

    <!-- Clean Target -->
    <target name="clean">
        <delete dir="ant-target"/>
    </target>

    <!-- Build Target -->
    <target name="build">
        <echo message="Building source files..."/>
        <mkdir dir="ant-target/classes"/>
        <javac encoding="UTF-8" debug="true" debuglevel="${debuglevel}" destdir="ant-target/classes"
            includeantruntime="false" source="${source}" target="${target}">
            <src path="src/main/java"/>
            <classpath refid="basadi2.classpath"/>
        </javac>
    </target>

    <!-- Build-Test Target -->
    <target name="build-test" depends="build">
        <echo message="Building test files..."/>
        <mkdir dir="ant-target/test-classes"/>
        <javac encoding="UTF-8" debug="true" debuglevel="${debuglevel}" destdir="ant-target/test-classes"
            includeantruntime="false" source="${source}" target="${target}">
            <src path="src/test/java"/>
            <classpath refid="basadi2.classpath"/>
        </javac>
        <!-- Copy test resources -->
        <copy todir="ant-target/test-classes">
            <fileset dir="src/test/resources"/>
        </copy>
    </target>

    <!-- Javadoc Target -->
    <target name="javadoc" depends="build">
        <echo message="Generating Javadoc..."/>
        <mkdir dir="ant-target/reports/html"/>
        <javadoc destdir="ant-target/reports/html" sourcepath="src/main/java"
            classpathref="basadi2.classpath" encoding="UTF-8"
            use="true" windowtitle="Jsoup API" doctitle="Jsoup API" author="true" version="true">
            <include name="**/*.java"/>
        </javadoc>
    </target>

    <!-- Test Execution Target -->
    <target name="test" depends="build-test,javadoc">
        <echo message="Running tests..."/>
        <mkdir dir="${junit.output.dir}"/>
        <mkdir dir="${junit.output.dir}/html"/>
        <junit fork="yes" printsummary="withOutAndErr">
            <formatter type="xml"/>
            <batchtest todir="${junit.output.dir}">
                <fileset dir="ant-target/test-classes">
                    <include name="**/*Test*.class"/>
                </fileset>
            </batchtest>
            <classpath refid="basadi2.classpath"/>
        </junit>
        <junitreport todir="${junit.output.dir}/html">
            <fileset dir="${junit.output.dir}">
                <include name="TEST-*.xml"/>
            </fileset>
            <report format="noframes"/>
        </junitreport>
        <echo message="JUnit test report is available at: ${junit.output.dir}/html/index.html"/>
    </target>
</project>
