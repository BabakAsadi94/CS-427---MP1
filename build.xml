<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="build" name="jsoup">
    <!-- Property Definitions -->
    <property environment="env"/>
    <property name="junit.output.dir" value="ant-target/reports"/>
    <property name="javadoc.output.dir" value="ant-target/reports/html"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.8"/>
    <property name="source" value="1.8"/>

    <!-- Classpath Definition -->
    <path id="basadi2.classpath">
        <pathelement location="ant-target/test-classes"/>
        <pathelement location="ant-target/classes"/>
        <!-- Explicitly include JUnit and Hamcrest JARs -->
        <pathelement location="ant-libs/junit-4.13.2.jar"/>
        <pathelement location="ant-libs/hamcrest-core-1.3.jar"/>
        <!-- Include other JARs -->
        <fileset dir="ant-libs">
            <include name="**/*.jar"/>
        </fileset>
    </path>

    <!-- Clean Target -->
    <target name="clean">
        <delete dir="ant-target"/>
    </target>

    <!-- Build Target -->
    <target name="build">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <mkdir dir="ant-target/classes"/>
        <javac debug="true" debuglevel="${debuglevel}" destdir="ant-target/classes" includeantruntime="false" source="${source}" target="${target}" encoding="UTF-8">
            <src path="src/main/java"/>
            <include name="**/*.java"/>
            <classpath refid="basadi2.classpath"/>
        </javac>
    </target>

    <!-- Build-Test Target -->
    <target name="build-test" depends="build">
        <mkdir dir="ant-target/test-classes"/>
        <javac debug="true" debuglevel="${debuglevel}" destdir="ant-target/test-classes" includeantruntime="false" source="${source}" target="${target}" encoding="UTF-8">
            <src path="src/test/java"/>
            <include name="**/*.java"/>
            <classpath refid="basadi2.classpath"/>
        </javac>
        <!-- Copy test resources with directory structure preserved -->
        <copy todir="ant-target/test-classes" flatten="false">
            <fileset dir="src/test/resources">
                <include name="**/*"/>
            </fileset>
        </copy>
    </target>

    <!-- Javadoc Target -->
    <target name="javadoc" depends="build">
        <echo message="Generating Javadoc..."/>
        <mkdir dir="${javadoc.output.dir}"/>
        <javadoc destdir="${javadoc.output.dir}" sourcepath="src/main/java" classpathref="basadi2.classpath" use="true" windowtitle="Jsoup API" doctitle="Jsoup API" author="true" version="true" encoding="UTF-8" />
    </target>

    <!-- Test Execution Target -->
    <target name="test" depends="build-test,javadoc">
        <mkdir dir="${junit.output.dir}"/>
        <mkdir dir="${junit.output.dir}/html"/>
        <junit fork="yes" printsummary="withOutAndErr" haltonfailure="false" haltonerror="false">
            <formatter type="xml"/>
            <batchtest todir="${junit.output.dir}">
                <fileset dir="ant-target/test-classes">
                    <include name="**/*Test*.class"/>
                </fileset>
            </batchtest>
            <classpath refid="basadi2.classpath"/>
        </junit>
        <junitreport>
            <fileset dir="${junit.output.dir}">
                <include name="TEST-*.xml"/>  
            </fileset>
            <report format="frames" todir="${junit.output.dir}/html"/>
        </junitreport>
        <echo message="Please find the final JUnit test report at: ${junit.output.dir}/html/index.html"/>
    </target>
</project>
